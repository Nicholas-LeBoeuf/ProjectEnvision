@{
    ViewData["Title"] = "User Settings";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Settings.css" />
<link rel="stylesheet" href="~/css/Buttons.css" />
<link rel="stylesheet" href="~/css/Inputs.css" />

<style>
    body {
        color: @BoardSettingsItems.m_TextColor;
    }

</style>

<div class="titleBox">
    <h2 style="margin: auto;">User Settings</h2>
</div>

<div class="boxContainer">
    @* Change username *@
    <div class="box">
        <div class="smallBoxTitle">Change Username</div>
        
        <br />

        <div class="secondaryInput">
            <label>Username</label>
            <input type="text" name="username" placeholder="Username" autocomplete="off" required="" maxlength="20" />
        </div>

        <div class="buttons">
            <input type="submit" class="buttonStyle changeUsernameButton" value="Change Username" />
        </div>
    </div>

    @* Change password *@
    <div class="box">
        <div class="smallBoxTitle">Change Username</div>

        <div class="secondaryInput">
            <label>New Password</label>
            <input type="password" name="password" placeholder="Password" autocomplete="off" required="" maxlength="20" />
        </div>

        <br />

        <div class="secondaryInput">
            <label>Confirm Password</label>
            <input type="password" name="confirm_password" placeholder="Confirm Password" autocomplete="off" required="" maxlength="20" />
        </div>

        <div class="buttons">
            <input type="submit" class="buttonStyle changePasswordButton" value="Change Password" />
        </div>
    </div>

    <div class="box">

    </div>

    <div class="box">

    </div>

    <div class="box">

    </div>

</div>