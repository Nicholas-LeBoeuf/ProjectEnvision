                        }
                        else if (BoardSettingsItems.m_BoardBackground == "Volcano-Background.jpg")
                        {

                            <option value="Volcano-Background.jpg">
                                Volcano
                            </option>

                            <option value="Computer-Background.jpg">
                                Computer
                            </option>

                            <option value="Beach-Background.jpg">
                                Beach
