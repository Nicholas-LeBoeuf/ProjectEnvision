@{
    ViewData["Title"] = "Choose board";
}

<link rel="stylesheet" href="~/css/ChooseBoard.css" />
<link rel="stylesheet" href="~/css/Buttons.css" />
<script src="https://kit.fontawesome.com/1e6384ea85.js" crossorigin="anonymous"></script>

<div class="box">
    <div class="headerArea">
        <div class="createButton">
            @{
                if (ChooseBoardModel.m_BoardList.Count < 5)
                {
                    <button class="buttonStyle chooseBoardButtons" onclick="location.href='@Url.Action("CreateBoard", "board")'">Create board</button>
                }
                else
                {
                    <button class="disabledButton chooseBoardButtons" onclick="location.href='@Url.Action("CreateBoard", "Board")'" disabled>Create board </button>
                }
            }
        </div>

        <img class="logo imageContainer" src="~/images/logo2.png" />

        <div class="logoutButton">
            <button class="buttonStyle chooseBoardButtons" onclick="location.href='@Url.Action("Index", "Home")'">Logout</button>
        </div>
    </div>
    <div class="tableContainer">
        <table style="color: white;">
            <tr>
                <th> </th>
                <th>Board Name</th>
                <th>Board Description</th>
                <th> </th>
            </tr>
            @{
                for (int i = 0; i < ChooseBoardModel.m_BoardList.Count; i++)
                {
                    <tr>
                        <td>
                            <a class="goButton" value=@ChooseBoardModel.m_BoardList[i] onclick="location.href='@Url.Action("GetTask", "Task", new { boardid = ChooseBoardModel.m_BoardIdList[i] })'">
                                <i class="fas fa-arrow-circle-right fa-3x"></i>
                            </a>
                        </td>
                        <td>@ChooseBoardModel.m_BoardList[i]</td>

                        <td> @ChooseBoardModel.m_BoardDescList[i]</td>

                        <td>
                            <a value=@ChooseBoardModel.m_BoardList[i] onclick="location.href='@Url.Action("deleteBoard", "Board", new { boardid = ChooseBoardModel.m_BoardIdList[i] })'">
                                <i class="fas fa-trash fa-3x"></i>
                            </a>
                        </td>
                    </tr>
                }
           }
        </table>
    </div>
</div>