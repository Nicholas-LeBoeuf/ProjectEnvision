@model Project_Envision.Models.TaskPropertiesModel
@{
    ViewData["Title"] = "Create Task";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<link rel="stylesheet" href="~/css/CreateBoard.css" />

<div class="box" method="post">
    <form>
        <div>
            <input type="text" name="Task_name" asp-for="Task_name" placeholder="Task Name" required="" />

        </div>

        <div>
            <span asp-validation-for="Task_name" class="text-danger"></span>
        </div>

        <div>
            <textarea cols="25" rows="4" placeholder="Task Description" id="description" asp-for="Task_Description" maxlength="100"></textarea>
        </div>

        <div>
            <span asp-validation-for="Task_Description" class="text-danger"></span>
        </div>

        <div>
            <input type="number" min="0" max="100" name="Task_points" asp-for="Task_points" placeholder="Task Points" required="" />

        </div>

        <div>
            <span asp-validation-for="Task_points" class="text-danger"></span>
        </div>

        <div class="buttons">
            <input type="submit" class="button homeButtons" value="Create Task" />
            <input type="button" class="button homeButtons" value="Cancel" onclick="location.href='@Url.Action("ProductBacklog")'" />
        </div>
    </form>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
}

