@{
    ViewData["Title"] = "Burndown Chart";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Inputs.css" />
<link rel="stylesheet" href="~/css/BurndownChart.css" />


<div class="box">

    <div class="options">
        <div class="option">
            <span>Sprint</span>
            @(Html.DevExtreme().SelectBox()
                .DataSource(new[] {
                    SeriesType.Line,
                    SeriesType.StackedLine,
                    SeriesType.FullStackedLine
                })
                .Value(SeriesType.Line)
                .OnValueChanged(@<text>
                    function (e) {
                        $("#line-chart").dxChart("option", "commonSeriesSettings.type", e.value);
                    }
                </text>)
            )
        </div>
    </div>

    @(Html.DevExtreme().Chart()
        .DataSource(new List<object> {
            new { Date = "@GetSprintProperties.getSprint_Start", StoryPoints = 59.8, Projected = 59.8 },
            new { Date = "3/2", StoryPoints = 74.2 },
            new { Date = "3/3", StoryPoints = 74.2  },
            new { Date = "3/4", StoryPoints = 74.2 },
            new { Date = "3/5", StoryPoints = 23.5 },
            new { Date = "3/6",  Projected = 0.0 }
        })

        .Series(s =>
        {
            s.Add().ValueField("StoryPoints").Name("Story-Points");
            s.Add().ValueField("Projected").Name("Projected Line");

        })

        .CommonSeriesSettings(s => s
            .ArgumentField("Date")
            .Type(SeriesType.Line)
            .Label(l => l
                .Visible(true)
                .Connector(c => c.Visible(true))
            )
        )

        .Export(e => e.Enabled(true))
        .Tooltip(t => t.Enabled(true))
    )

</div>