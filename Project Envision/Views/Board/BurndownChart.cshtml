@{
    ViewData["Title"] = "Burndown Chart";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

<canvas id="burndown" style="width: 100%; max-width: 600px; padding: 0; margin: auto; display: block; 
          width: 800px; height: 600px; position: absolute; top: 0; bottom: 0; left: 0; right: 0;"></canvas>


<script>
    var xValues = [100, 200, 300, 400, 500, 600, 700, 800, 900, 1000];

    new Chart("burndown", {
        type: "line",
        data: {
            labels: xValues,
            datasets: [{
                data: [1000, 900, 800, 700, 600, 500, 400, 300, 200, 100, 0],
                name: "Target",
                borderColor: "red",
                fill: false
            }, {
                data: [994, 837, 837, 279, 383, 283, 385, 938, 827],
                name: "Progress",
                borderColor: "green",
                fill: false
            }, ]
        },
        options: {
            legend: { display: true },
            title: { display: true, text: "Sprint 1", color: "white" } 
        }
    });
</script>