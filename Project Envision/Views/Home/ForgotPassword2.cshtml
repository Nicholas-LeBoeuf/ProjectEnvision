@model Project_Envision.Models.ForgotPassword2
@{
    ViewData["Title"] = "Forgot Password";
}
<link rel="stylesheet" href="~/css/site.css" />

<form asp-action="ForgotPassword2" method="post">
    <br />
    <rsquare id="rsquare">

        <headertxt id="headertxt">
            <b>Forgot Password</b>
        </headertxt>
        <br>
        <label id="Code" asp-for="SecurityCode">
            Security Code:
            <input type="text" name="SecurityCode" asp-for="SecurityCode" minLength="1" required maxLength="6" />
            <span asp-validation-for="SecurityCode" class="text-danger"></span>
        </label>
        <br />
        <button id="SubmitButton" type="submit">Verify</button>
        <input type="button" id="cancelButton" value="Cancel" onclick="location.href='@Url.Action("Index")'" />

    </rsquare>
</form>

@if (ViewBag.Message != null)
{
    <script type="text/ id=" SecurityCodeLabel" asp-for="SecurityCode" javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
}