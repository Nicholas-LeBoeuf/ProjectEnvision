@model Project_Envision.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="box">
    <form asp-action="Login" method="post">
        <div id="loginLogo"></div>
        <div class="loginContainer">
            <input type="text" name="username" required="" autocomplete="off"/>
            <label>Username</label>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="loginContainer">
            <input type="password" required="" name="password" autocomplete="off"/>
            <label>Password</label>
            <span asp-validation-for="password" class="text-danger"></span>
            <a href='@Url.Action("ForgotPassword1")'>Forgot Password?</a>
        </div>
        <div class="buttons">
            <input type="submit" class="button homeButtons" value="Login" />
            <input type="button" class="button homeButtons" value="Cancel" onclick="location.href='@Url.Action("Index")'" />
        </div>
    </form>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
}

