@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="box">
    <form>
        <div id="loginLogo"></div>
        <div class="loginContainer">
            <input type="text" required="" />
            <label>Login</label>
        </div>
        <div class="loginContainer">
            <input type="password" required="" />
            <label>Password</label>
        </div>
        <div class="buttons">
            <input type="submit" class="button homeButtons" value="Login" />
            <input type="button" class="button homeButtons" value="Cancel" onclick="location.href='@Url.Action("Index")'" />
        </div>   
    </form>
</div>