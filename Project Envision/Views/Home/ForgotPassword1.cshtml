@model Project_Envision.Models.ForgotPassword1
@{
    ViewData["Title"] = "Forgot Password";
}
<link rel="stylesheet" href="~/css/ForgotPassword.css" />

<div class="box">
    <form asp-action="ForgotPassword1" method="post">
        <div id="ForgotPasswordLogo"></div>
        <div class="ForgotPasswordContainer">
            <input type="text" name="username" asp-for="username" minLength="8" required maxLength="20" autocomplete="off" />
            <label id="UsernameLabel" asp-for="username">Username</label>
        </div>
        <div class="ForgotPasswordContainer">
            <input type="email" name="email" asp-for="email" minLength="8" required maxLength="30" autocomplete="off"/>
            <label  id="EmailLabel" asp-for="email">Email</label>

        </div>
        <div class="buttons">
            <input type="submit" class="button homeButtons" value="Submit" />
            <input type="button" class="button homeButtons" value="Cancel" onclick="location.href='@Url.Action("Index")'" />
        </div>
    </form>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
}